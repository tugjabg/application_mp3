<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">
   <FrameLayout
       android:id="@+id/frameLayoutDongTatCaAlbum"
       android:layout_gravity="center"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content">
        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/imgViewDongTatCaCacAlbum"
            android:layout_width="180dp"
            android:layout_height="180dp"/>
   </FrameLayout>
   <TextView
       android:id="@+id/tenTatCaAlbum"
       android:textColor="#060606"
       android:textSize="15sp"
       android:layout_below="@+id/frameLayoutDongTatCaAlbum"
       android:maxWidth="200sp"
       android:maxLines="1"
       android:ellipsize="end"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"/>
    <TextView
        android:layout_below="@+id/tenTatCaAlbum"
        android:textSize="13sp"
        android:id="@+id/tenCaSiCuaTatCaAlbum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>