<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center">
    <TextView
        android:textColor="#3e3b3b"
        android:textSize="30sp"
        android:gravity="center"
        android:text="NHỊP ĐIỆU CẢM XÚC"
        android:layout_marginTop="15dp"
        android:id="@+id/textViewTitlePlayList"
        android:layout_marginBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ListView
        android:layout_below="@id/textViewTitlePlayList"
        android:id="@+id/listViewPlayList"
        tools:listitem="@layout/dong_playlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/textViewMorePlayList"
        android:paddingTop="10dp"
        android:layout_marginTop="8dp"
        android:background="#c9c7c7"
        android:layout_marginBottom="8dp"
        android:paddingBottom="10dp"
        android:textColor="#0a0a0a"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:drawablePadding="10dp"
        android:textSize="19sp"
        android:text="Xem thêm"
        android:drawableLeft="@drawable/iconmoreplaylist"
        android:layout_below="@id/listViewPlayList"/>

</RelativeLayout>