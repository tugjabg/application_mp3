<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageButton
        android:layout_marginTop="5dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:scaleType="fitXY"
        android:id="@+id/imgViewBackGroundImg"
        android:layout_width="match_parent"
        android:layout_height="110dp"/>
    <View
        android:background="@drawable/custom_background_banner"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="110dp"/>
    <ImageView
        android:id="@+id/imgViewPlayList"
        android:scaleType="fitXY"
        android:layout_alignBottom="@id/imgViewBackGroundImg"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:elevation="6dp"
        android:layout_width="50dp"
        android:layout_height="50dp"/>
    <TextView
        android:textSize="13sp"
        android:text="Nhung bai hat hay"
        android:layout_alignBottom="@id/imgViewBackGroundImg"
        android:layout_marginLeft="13dp"
        android:layout_toRightOf="@id/imgViewPlayList"
        android:textStyle="bold"
        android:maxLines="1"
        android:textColor="#FFFFFF"
        android:id="@+id/txtViewNamePlayList"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="50dp"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>